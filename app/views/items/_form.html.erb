
<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @item, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">

          <div class="field column is-9">
            <div class="control">
              <%= f.input :title , required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
            </div>
              <span class="icon is-small is-left">
                <i class="fa fa-pencil"></i>
              </span>
          </div>

          <div class="field column">
            <div class="control">
              <%= f.input :price, required: true, input_html: { class:"input", maxlength: 7  }, wrapper: false, label_html: { class:"label" } %>
            </div>
              <span class="icon is-small is-left">
                <i class="fa fa-dollar"></i>
              </span>
          </div>

        </div>

        <div class="field">
          <div class="control">
            <%= f.input :product, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
            <span class="icon is-small is-left">
              <i class="fa fa-pencil"></i>
            </span>
        </div>

        <div class="columns">
          <div class="field column is-4">
            <div class="control">
              <label class="label">Brand of Item</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :brand, collection: Item::BRAND, prompt: "Select Brand" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-shopping-bag"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Country of Origin</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :origin, collection: Item::ORIGIN, prompt: "Select Origin" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-globe"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Condition</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :condition, collection: Item::CONDITION, prompt: "Select Condition" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-star"></i>
                </span>
              </div>
            </div>
           </div>
         </div>

        <div class="field">
          <div class="control">
            <label class="label">Add Images</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input item-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-cloud-upload"></i></span>
                    <span class="file-label">Choose a fileâ€¦</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
            <%= link_to 'Cancel', items_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>
